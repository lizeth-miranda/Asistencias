<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="account_analytic_view_tree" model="ir.ui.view">
        <field name="name">account.analytic.view.form.inherited</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="department" />
                <field name="category" />
            </field>
            <field name="account_id" position="after">
                <field name="normal" />
                <field name="work_hours" widget="float_time" />
                <field name="hours_extra" widget="float_time" />
                <!-- <field name="mitad" widget="float_time" />
                <field name="hours" widget="float_time" />
                <field name="hours_sat" widget="float_time" />
                <field name="day" /> -->
                <field name="cost_extra" />
                <field name="total_extra" widget="monetary" />
            </field>
        </field>
    </record>

    <record id="account_analytic_view_form" model="ir.ui.view">
        <field name="name">account.analytic.view.form.inherited.costo</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_form" />
        <field name="arch" type="xml">
            <field name="product_uom_id" position="after">
                <field name="category" />
            </field>
        </field>
    </record>

    <record id="account_analytic_view_search" model="ir.ui.view">
        <field name="name">account.analytic.view.form</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search" />
        <field name="arch" type="xml">
            <group position="inside">
                <filter name="by_category" string="category" context="{'group_by': 'category'}" />
                <!-- <filter name="by_department" string="department" context="{'group_by': 'Department'}" /> -->
            </group>
        </field>
    </record>
</odoo>
