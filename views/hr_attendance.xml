<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="hr_attendance_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.view.tree.inherited</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="department" />
                <field name="account_ids" domain="[('users', '=', uid)]" required="1"/>
                <!-- <field name="normal" /> -->
                <field name="currency_id" invisible="1" />
            </field>
            <field name="check_out" position="after">
                <field name="cost_day" optional="show" />
                <field name="timesheet_cost" class="oe_inline" optional="show" />
                <field name="cost_extra" optional="show" />
            </field>
            <field name="timesheet_cost" position="after">
                <field name="hours" widget="float_time" />
            </field>
            <field name="worked_hours" position="after">
                <!-- <field name="total" /> -->
                <!-- <field name="mitad" /> -->
                <!-- <field name="hours_sat" widget="float_time" /> -->
                <!-- <field name="total_hours" widget="float_time" /> -->
                <field name="hours_extra" widget="float_time" />
                <field name="total_extra" sum="Total extra" />
                <field name="cost_total" string="Cost Total" sum="Costo Total" />
            </field>

            <field name="check_out" position="after">
                <!-- <field name="day" /> -->
                <!-- <field name="Date" /> -->
            </field>
        </field>
    </record>

</odoo>
