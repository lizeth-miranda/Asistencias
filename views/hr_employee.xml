<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.empoyee.view.form.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">

            <field name="work_location" position="after">
                <field name="empresa" />
            </field>
            <notebook>
                <page string=" Horas Laborales Y costos">
                    <group string="Costos">
                        <field name="salary" widget="monetary" required="1" />
                        <field name="timesheet_cost" />
                        <field name="cost_day" widget="monetary" required="1" />
                        <field name="costo_dayCS" required="1" />
                        <field name="cost_extra" required="1" />
                        <field name="cost_default" required="1" />
                    </group>
                    <group string="Horas Laborales">
                        <field name="horas_lab" widget="float_time" />
                        <field name="horas_lab_in" widget="float_time" />
                        <field name="hours" widget="float_time" required="1" />
                    </group>
                    <group string="Cuenta Bancaria">
                        <field name="cuenta" />
                        <field name="clabe" />
                        <field name="banco" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
