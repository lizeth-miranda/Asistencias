<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.empoyee.view.form.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">

            <field name="work_location" position="after">
                <field name="empresa" />
            </field>
            <field name="parent_id" position="after">
                <field name="cod_emp" />
                <field name="fecha_ingreso" />
                <field name="afiliacion_imss" />
            </field>
            <notebook>
                <page string=" Horas Laborales y Costos">
                    <group>
                        <group string="Costos">
                            <field name="salary" widget="monetary" />
                            <field name="timesheet_cost" />
                            <field name="cost_day" widget="monetary" />
                            <field name="costo_dayCS" />
                            <field name="cost_extra" />
                            <field name="cost_default" />
                            <field name="credito_info" />
                            <field name="credito_fona" />
                            <field name="bono" />
                        </group>
                        <group string="Horas Laborales">
                            <field name="horas_lab" widget="float_time" />
                            <field name="horas_lab_in" widget="float_time" />
                            <field name="hours" widget="float_time" required="1" />
                        </group>
                        <group string="Cuenta Bancaria">
                            <field name="cuenta" />
                            <field name="clabe" />
                            <field name="banco" />
                        </group>
                    </group>
                </page>
                <page string="Préstamos Personales y Desc. Herramienta">
                    <group>
                        <group string="Préstamos Personales">
                            <field name="fecha_actual" />
                            <field name="total_prestamo" />
                            <field name="semanas" />
                            <!-- <field name="num_pago" /> -->
                            <field name="abono" />
                            <!-- <field name="saldo" /> -->
                            <field name="fecha_pp" />
                            <field name="onlyfecha_pp" invisible="1" />
                            <field name="fecha_up" />
                        </group>
                        <group string="Descuentos Herramienta, otros">
                            <field name="fecha_descuento" />
                            <field name="descuento" />
                            <field name="rango" />
                            <field name="pago" />
                            <field name="fecha_pd" />
                            <field name="onlyfecha_pd" invisible="1" />
                            <field name="fecha_final" />
                            <field name="desc" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
