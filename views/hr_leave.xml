<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_view_form" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherited</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager_approve" />
        <field name="arch" type="xml">


            <field name="name" position="after">
                <field name="account_ids" domain="[('users', '=', uid)]" />
                <field name="num_emp" />
                <field name="pues_tra" />
                <field name="cost_day" invisible="1" readonly="1" widget="monetary" />
                <!-- <field name="cost_default" invisible="0" readonly="1" widget="monetary" /> -->
                <field name="currency_id" invisible="1" />
                <field name="leavee" invisible="1" />
            </field>
        </field>
    </record>
</odoo>
